<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <title>Pokedex</title>
</head>
<body>
    <h1>Pokedex</h1>
    <div class="tabs">
        <button class="tab-button active" onclick="abrirAba('pokemons')">Pokémons</button>
        <button class="tab-button" onclick="abrirAba('treinadores')">Treinadores</button>
    </div>
    <div id="pokemons" class="tab-content active">
        <div class="pokemon-grid">
            <% pokemons.forEach(function(pokemon) { %>
                <div class="pokemon-card">
                    <img src="<%= pokemon.imagem %>" alt="<%= pokemon.nome %>" class="pokemon-image">
                    <h2><%= pokemon.nome %></h2>
                    <p>Tipo: <%= pokemon.tipo %></p>
                </div>
            <% }); %>
        </div>
    </div>
    <div id="treinadores" class="tab-content">
        <div class="treinador-grid">
            <% treinadores.forEach(function(treinador) { %>
                <div class="treinador-card">
                    <h2><%= treinador.nomeTreinador %></h2>
                    <p><strong>Pokémons:</strong> <%= treinador.listaPokemon.map(p => p.nome).join(', ') %></p>
                </div>
            <% }); %>
        </div>
    </div>
    <div class="actions">
        <a href="/cadastrarPokemon" class="button">Cadastrar novo Pokémon</a>
        <a href="/cadastrarTreinador" class="button">Cadastrar novo Treinador</a>
    </div>
    <script src="/js/index.js"></script>
</body>
</html>
